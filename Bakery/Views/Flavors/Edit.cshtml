@{
  ViewData["Title"] = "Home Page";
}

@model Bakery.Models.Flavor

<h2>Edit Flavor</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.LabelFor(model => model.FlavorName)
  @Html.EditorFor(model => model.FlavorName)

  @Html.LabelFor(model => model.FlavorDescription)
  @Html.EditorFor(model => model.FlavorDescription)
  
  <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("Flavor List", "Index")</p>
<p>@Html.ActionLink("Return to Homepage", "Index", "Home")</p>