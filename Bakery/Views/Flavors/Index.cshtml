@{
  ViewData["Title"] = "Home Page";
}

@using Bakery.Models;

<div class="text-center">
  <h1 class="display-4">Add Some Flavors<h2>

  @if(Model.Count == 0)
  {
    <p>Get started by adding a Flavor</p>
  }
  else
  {
    <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
    }
    </ul>
  }
</div>

<hr />
<p>@Html.ActionLink("Flavor List", "Index", "Flavors")</p>
<p>@Html.ActionLink("Add a flavor", "Create")</p>
<p>@Html.ActionLink("Return to Homepage", "Index", "Home")</p>