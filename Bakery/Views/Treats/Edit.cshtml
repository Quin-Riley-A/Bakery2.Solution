@{
  ViewData["Title"] = "Home Page";
}

@model Bakery.Models.Treat

<h2>Edit Treat</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.TreatName)
  @Html.EditorFor(model => model.TreatName)

  @Html.LabelFor(model => model.TreatDescription)
  @Html.EditorFor(model => model.TreatDescription)

  <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("Treat list", "Index")</p>
<p>@Html.ActionLink("Return to Homepage", "Index", "Home")</p>